{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "murdeni/skills-percentage",
  "version": "1.0.0",
  "title": "Murdeni Skills Percentage",
  "category": "murdeni-blocks",
  "icon": "welcome-learn-more",
  "description": "Display skills with percentage bars to showcase expertise levels.",
  "keywords": [
    "skills",
    "percentage",
    "expertise",
    "progress",
    "bar"
  ],
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "textdomain": "murdeni-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "attributes": {
    "skills": {
      "type": "array",
      "default": [
        {
          "id": "skill-1",
          "name": "Web Development",
          "percentage": 95
        },
        {
          "id": "skill-2",
          "name": "Shopify Development",
          "percentage": 85
        },
        {
          "id": "skill-3",
          "name": "WordPress Development",
          "percentage": 98
        }
      ]
    },
    "barHeight": {
      "type": "number",
      "default": 20
    },
    "barColor": {
      "type": "string",
      "default": "#4CAF50"
    },
    "barBackgroundColor": {
      "type": "string",
      "default": "#f0f0f0"
    },
    "textColor": {
      "type": "string",
      "default": "#333333"
    },
    "fontSize": {
      "type": "number",
      "default": 16
    },
    "barBorderRadius": {
      "type": "number",
      "default": 4
    },
    "showPercentage": {
      "type": "boolean",
      "default": true
    },
    "animateOnScroll": {
      "type": "boolean",
      "default": true
    },
    "spacing": {
      "type": "number",
      "default": 20
    }
  }
}